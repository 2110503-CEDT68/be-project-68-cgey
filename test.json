  "item": [
    {
      "name": "register user",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "var timestamp = Date.now();",
              "pm.environment.set('USER_EMAIL', 'testuser' + timestamp + '@test.com');",
              "pm.environment.set('USER_PASSWORD', 'password123');"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {\r",
              "    pm.response.to.have.status(200);\r",
              "});\r",
              "\r",
              "pm.test(\"Response has token\", function () {\r",
              "    pm.expect(pm.response.json().token).to.not.be.undefined;\r",
              "});\r",
              "\r",
              "pm.environment.set(\"TOKEN\",pm.response.json().token)"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "description": "JSON Type",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\r\n    \"name\":\"Test User\",\r\n    \"tel\":\"081-234-5678\",\r\n    \"email\":\"{{USER_EMAIL}}\",\r\n    \"password\": \"{{USER_PASSWORD}}\",\r\n    \"role\":\"user\"\r\n}"
        },
        "url": {
          "raw": "http://localhost:5050/api/v1/auth/register",
          "protocol": "http",
          "host": [
            "localhost"
          ],
          "port": "5050",
